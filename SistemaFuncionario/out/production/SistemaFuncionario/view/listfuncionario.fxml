<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ListFuncionarioController">
    <children>
        <BorderPane>
            <left>
                <Pane fx:id="contentArea" prefHeight="514.0" prefWidth="607.0" BorderPane.alignment="CENTER">
                    <children>
                        <TableView fx:id="table" layoutX="26.0" layoutY="100.0" prefHeight="288.0" prefWidth="561.0">
                            <columns>
                                <TableColumn fx:id="tablecodFuncionario" editable="false" prefWidth="71.0" resizable="false" text="Código" />
                                <TableColumn fx:id="tablenome" editable="false" prefWidth="207.0" resizable="false" text="Nome" />
                                <TableColumn fx:id="tablevalorSalario" editable="false" minWidth="0.0" prefWidth="65.0" resizable="false" text="Salário" />
                        <TableColumn fx:id="tabletempodeEmpresa" editable="false" minWidth="0.0" prefWidth="99.0" resizable="false" text="Dias de Empresa" />
                                <TableColumn fx:id="tabledataAdmissao" editable="false" prefWidth="96.0" resizable="false" sortable="false" text="Data" />
                            </columns>
                        </TableView>
                  <Button fx:id="btnRemoverFuncionario" layoutX="412.0" layoutY="404.0" mnemonicParsing="false" onAction="#removerFuncionario" prefHeight="27.0" prefWidth="75.0" text="Remover" />
                  <Button fx:id="btnClearList" layoutX="508.0" layoutY="404.0" mnemonicParsing="false" onAction="#clearList" prefHeight="27.0" prefWidth="85.0" text="Limpar Lista" />
                    </children>
                </Pane>
            </left></BorderPane>
    </children>
</AnchorPane>
